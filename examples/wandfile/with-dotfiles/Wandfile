  #   configs:
  #     - nvim
  #     - starship
  #     - zsh
  #     - git

# ============================================================================
# Metadata
# ============================================================================

metadata:
  description: "Complete development environment setup"
  author: "Your Name"
  updated: "2025-11-23"
